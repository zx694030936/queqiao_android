<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_queqiaopage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旧手机号码"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/et_oldphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="10dp"
                    android:hint="请输入手机号"
                    android:maxLength="11"
                    android:textColorHint="@color/gray_normal_text"
                    android:textSize="12sp"
                    android:background="@drawable/shape_rectangle_gray"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="1dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:layout_marginLeft="30dp"
                    android:maxLength="6"
                    android:hint="请输入验证码"
                    android:textColorHint="@color/gray_normal_text"
                    android:textSize="12sp"
                    android:background="@drawable/shape_rectangle_gray"
                    />
                <TextView
                    android:id="@+id/tv_obtaincode_changephone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:layout_marginRight="10dp"
                    android:text="获取验证码"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_rectangle_purple"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="24dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新密码"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/et_newpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="10dp"
                    android:hint="请输入6-16位新密码"
                    android:maxLength="16"
                    android:textColorHint="@color/gray_normal_text"
                    android:textSize="12sp"
                    android:background="@drawable/shape_rectangle_gray"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_changepwd_changepwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textstyle_purplebutton"
            android:layout_marginTop="32dp"
            android:text="确认"
            android:textSize="14sp"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>
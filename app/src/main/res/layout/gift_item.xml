<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/black_50"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/face"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="航空母舰"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <com.queqiaolove.im.MagicTextView
            android:id="@+id/gift_num"
            xmlns:qwerjk="http://schemas.android.com/apk/res/com.queqiaolove"
            android:textSize="30sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="2dp"
            qwerjk:foreground="@android:color/holo_blue_bright"
            qwerjk:innerShadowDy="2"
            qwerjk:innerShadowColor="#FF000000"
            qwerjk:innerShadowRadius="1"
            qwerjk:strokeColor="@android:color/white"
            qwerjk:strokeJoinStyle="miter"
            qwerjk:strokeWidth="2"
            android:text="X1" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/gray_background_queqiaopage"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_anchor_live"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_mylivevideo"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:background="@drawable/shape_shade_blacktowhite"
            android:layout_alignBottom="@id/iv_anchor_live">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="主播名"
                android:textSize="12sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@mipmap/ic_peopleoflook_live"
                android:drawablePadding="4dp"
                android:text="观看人数"
                android:textSize="10sp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_anchor_queqiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/black_queqiao_text"
        android:textSize="14dp" />
</LinearLayout>
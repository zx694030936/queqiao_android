<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="2dp"
    android:paddingBottom="2dp"
    android:background="@color/gray_background_queqiaopage">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.queqiaolove.widget.MyImageView
            android:id="@+id/iv_anchor_phonelive"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@mipmap/ic_default_vertical_live"
            android:scaleType="centerCrop"
            custom:ratio="0.6"
            />

        <TextView
            android:id="@+id/tv_numoflook_phonelive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rectangle_transgray"
            android:padding="4dp"
            android:layout_alignTop="@id/iv_anchor_phonelive"
            android:layout_alignRight="@id/iv_anchor_phonelive"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/ic_peopleoflook_live"
            android:drawablePadding="4dp"
            android:text="观看人数"
            android:textSize="10sp"
            android:textColor="@color/white"/>
        <!--主播名，位置-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_shade_blacktowhite"
            android:layout_alignLeft="@id/iv_anchor_phonelive"
            android:layout_alignRight="@id/iv_anchor_phonelive"
            android:layout_alignBottom="@id/iv_anchor_phonelive"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            >
            <TextView
                android:id="@+id/tv_anchor_phonelive"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:singleLine="true"
                android:text="主播"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_location_phonelive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:drawableLeft="@mipmap/ic_location_live"
                android:drawablePadding="4dp"
                android:text="位置"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_headlineandtopic_phonelive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="话题标题"
        android:textColor="@color/black_queqiao_text"
        android:textSize="14dp" />
</LinearLayout>
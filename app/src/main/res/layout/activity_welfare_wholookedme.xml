<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_queqiaopage"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:background="@drawable/shape_halfcircle_white"></FrameLayout>
        <include
            android:id="@+id/myusericon_wholookme"
            layout="@layout/headerview_wholookme" />
        <include
            android:layout_below="@id/myusericon_wholookme"
            layout="@layout/pulltofresh_grideview_3columns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></include>
    </RelativeLayout>

</LinearLayout>
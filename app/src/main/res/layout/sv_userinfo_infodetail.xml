            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="姓名:" />

        <TextView
            android:id="@+id/tv_username_userinfo"
            style="@style/textstyle_userinfo_gray"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="暂无" />
    </LinearLayout>
    <LinearLayout

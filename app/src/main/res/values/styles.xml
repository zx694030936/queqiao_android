<resources>
    <!--字体样式-->
    <!--横屏直播-->
    <style name="textstyle_liveuserinfo_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_rectangle_whiteline</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="textstyle_liveuserinfo_purplebutton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/shape_purple_startpusher</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--按钮-->
    <style name="textstyle_purplebutton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/shape_purple_startpusher</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--直播、视频，标签-->
    <style name="textstyle_liveorvideo_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/shape_rectangle_whiteline</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!--个人详情-->
    <!--标签-->
    <style name="textstyle_userinfo_label">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@color/purple_queqiao</item>
        <item name="android:background">@drawable/shape_circle_purpleline</item>
    </style>
    <!--选项-->
    <style name="textstyle_userinfo_params">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_queqiao_text</item>
    </style>
    <!--普通内容-->
    <style name="textstyle_userinfo_gray">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_normal_text</item>
    </style>
    <!--普通内容-->
    <style name="textstyle_liveuserinfo_black">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>-->
    </style>
    <!--主播未在，dialog-->
    <style name="dialog_style_nopusher" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_anim_nopusher</item>
    </style>

    <style name="dialog_anim_nopusher">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_nopusher</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_nopusher</item>
    </style>
    <!--搜索dialog，直播话题-->
    <style name="dialog_style_search" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <!--<item name="android:windowBackground">@color/white</item>-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--<item name="android:windowAnimationStyle">@style/dialog_anim_search</item>-->
    </style>

    <style name="dialog_anim_search">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_search</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_search</item>
    </style>
    <!--加密-直播首页-->
    <style name="dialog_style_lockpusher" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_anim_lockpusher</item>
    </style>

    <style name="dialog_anim_lockpusher">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_lockpusher</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_lockpusher</item>
    </style>

    <!--个人中心-发送邀请码-->
    <style name="dialog_style_sendinvite" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_anim_sendinvite</item>
    </style>

    <style name="dialog_anim_sendinvite">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_outtobottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_bottomtoout</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--CircleImageView的style属性-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!--数字选中器的style属性-->
    <declare-styleable name="CustomNumberPicker">
        <attr name="np_dividerColor" format="color" />
        <attr name="np_formatter" format="string" />
        <attr name="np_focusable" format="boolean" />
        <attr name="np_horizontal" format="boolean" />
        <attr name="np_max" format="integer" />
        <attr name="np_min" format="integer" />
        <attr name="np_textColor" format="color" />
        <attr name="np_textSize" format="dimension" />
        <attr name="np_typeface" format="string" />
        <attr name="np_width" format="float" />
        <attr name="np_height" format="float" />
    </declare-styleable>

    <declare-styleable name="EaseChatMessageList">
        <attr name="msgListMyBubbleBackground" format="reference"/>
        <attr name="msgListOtherBubbleBackground" format="reference"/>
        <attr name="msgListShowUserAvatar" format="boolean"/>
        <attr name="msgListShowUserNick" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="EaseConversationList">
        <attr name="cvsListPrimaryTextColor" format="color"/>
        <attr name="cvsListSecondaryTextColor" format="color"/>
        <attr name="cvsListTimeTextColor" format="color"/>
        <attr name="cvsListPrimaryTextSize" format="dimension"/>
        <attr name="cvsListSecondaryTextSize" format="dimension"/>
        <attr name="cvsListTimeTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="EaseContactList">
        <attr name="ctsListPrimaryTextColor" format="color"/>
        <attr name="ctsListPrimaryTextSize" format="dimension"/>
        <attr name="ctsListShowSiderBar" format="boolean"/>
        <attr name="ctsListInitialLetterBg" format="reference|color"/>
        <attr name="ctsListInitialLetterColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="EaseEmojiconMenu">
        <attr name="bigEmojiconRows" format="integer"/>
        <attr name="emojiconColumns" format="integer"/>
    </declare-styleable>

    <declare-styleable name="EaseChatExtendMenu">
        <attr name="numColumns" format="integer"/>
    </declare-styleable>

    <declare-styleable name="EaseTitleBar">
        <attr name="titleBarTitle" format="string"/>
        <attr name="titleBarLeftImage" format="reference"/>
        <attr name="titleBarRightImage" format="reference"/>
        <attr name="titleBarBackground" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="EaseSwitchButton">
        <attr name="switchOpenImage" format="reference"/>
        <attr name="switchCloseImage" format="reference"/>
        <attr name="switchStatus">
            <enum name="open" value="0"/>
            <enum name="close" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="EaseImageView">
        <attr name="ease_border_color" format="color" />
        <attr name="ease_border_width" format="dimension" />
        <attr name="ease_press_alpha" format="integer" />
        <attr name="ease_press_color" format="color" />
        <attr name="ease_radius" format="dimension" />
        <attr name="ease_shape_type" format="enum">
            <enum name="none" value="0" />
            <enum name="round" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="ContactItemView">
        <attr name="contactItemImage" format="reference"/>
        <attr name="contactItemName" format="string"/>
    </declare-styleable>


    <declare-styleable name="app">
        <attr name="RPmytitle" format="string"/>
        <attr name="RPleftImage" format="reference"/>
        <attr name="RPrightImage" format="reference"/>
        <attr name="RPrightText" format="string"/>
        <attr name="RPrightTextColor" format="reference|color"/>
        <attr name="RPrightTextSize" format="dimension"/>
        <attr name="RPsubTitleText" format="string"/>
        <attr name="RPsubTitleTextColor" format="reference|color"/>
        <attr name="RPsubTitleTextSize" format="dimension"/>
        <attr name="RPtitleTextColor" format="reference|color"/>
        <attr name="RPtitleTextSize" format="dimension"/>
        <attr name="RPtitleBackground" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="gridPasswordView">

        <attr name="gpvTextColor" format="color|reference"/>
        <attr name="gpvTextSize" format="dimension"/>

        <attr name="gpvLineColor" format="color"/>
        <attr name="gpvGridColor" format="color"/>
        <attr name="gpvLineWidth" format="dimension"/>

        <attr name="gpvPasswordLength" format="integer"/>
        <attr name="gpvPasswordTransformation" format="string"/>

        <attr name="gpvPasswordType" format="enum">
            <enum name="numberPassword" value="0"/>
            <enum name="textPassword" value="1"/>
            <enum name="textVisiblePassword" value="2"/>
            <enum name="textWebPassword" value="3"/>
        </attr>

    </declare-styleable>


    <!--RecyclerView-->
    <declare-styleable name="RPRecyclerView">
        <!-- Class name of the Layout Manager to be used.
        <p/>
        The class must extend android.support.v7.widget.RecyclerView$LayoutManager
        and have either a default constructor or constructor with the signature
        (android.content.Context, android.util.AttributeSet, int, int).
         <p/>
         If the name starts with a '.', application package is prefixed.
         Else, if the name contains a '.', the classname is assumed to be a full class name.
         Else, the recycler view package name (android.support.v7.widget) is prefixed. -->
        <attr name="RPlayoutManager" format="string"/>

        <!-- ============================= -->
        <!-- Attributes for Layout Manager -->
        <!-- ============================= -->
        <eat-comment/>

        <attr name="android:orientation"/>
        <attr name="RPspanCount" format="integer"/>
        <attr name="RPreverseLayout" format="boolean"/>
        <attr name="RPstackFromEnd" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="RPRoundCard">
        <attr name="RPCardBgImg" format="reference"></attr>
        <attr name="RPCardBgColor" format="reference|color"></attr>
        <attr name="RPCardRadius" format="dimension"></attr>
        <attr name="RPCardBgType" format="integer"></attr>
    </declare-styleable>
</resources>
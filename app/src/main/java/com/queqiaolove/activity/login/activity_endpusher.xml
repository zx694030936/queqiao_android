<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_endpusher">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:text="直播结束"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <com.queqiaolove.widget.CircleImageView
        android:id="@+id/cir_usericon_mine"
        android:layout_gravity="center_horizontal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_default_endpusher"
        app:border_color="@android:color/white"
        app:border_width="2dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="主播名"
        android:textColor="@color/graywhite_queqiao"
        android:textSize="16sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/tv_look_endpusher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:text="观看人数"
            android:textColor="@color/graywhite_queqiao"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_queqiaobi_endpusher"
            android:layout_toLeftOf="@id/tv_look_endpusher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鹊桥币"
            android:textColor="@color/graywhite_queqiao"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_like_endpusher"
            android:layout_toRightOf="@id/tv_look_endpusher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜欢"
            android:textColor="@color/graywhite_queqiao"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_looknum_endpusher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_look_endpusher"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:text="210"
            android:textColor="@color/graywhite_queqiao"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/tv_binum_endpusher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_looknum_endpusher"
            android:layout_alignRight="@id/tv_queqiaobi_endpusher"
            android:text="20"
            android:textColor="@color/graywhite_queqiao"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_likenum_endpusher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_like_endpusher"
            android:layout_alignBottom="@id/tv_looknum_endpusher"
            android:text="100"
            android:textColor="@color/graywhite_queqiao"
            android:textSize="16sp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:text="分享直播给好友,更容易上热门 !"
        android:textSize="14sp"
        android:textColor="@color/graywhite_queqiao"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_freindring_share"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_weixin_share"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_qq_share"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_qqzone_share"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_weibo_homepusher"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_renren_endpusher"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_endpusher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_purple_endpusher"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="确定"
        android:textSize="18sp"
        android:textColor="@color/purple_queqiao"/>
</LinearLayout>
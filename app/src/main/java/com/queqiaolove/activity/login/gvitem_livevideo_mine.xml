<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:id="@+id/iv_mylivevideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_mylivevideo"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/play_mylivevideo"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:background="@drawable/shape_shade_blacktowhite"
            android:layout_alignBottom="@id/iv_mylivevideo">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="时长"
                android:textSize="12sp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@mipmap/ic_peopleoflook_live"
                android:drawablePadding="4dp"
                android:text="观看人数"
                android:textSize="10sp"
                android:textColor="@color/white"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background_queqiaopage"
    android:orientation="vertical"
    android:scrollbars="none">
    <!--标题-->
    <include
        android:id="@+id/ll_title_mygift"
        layout="@layout/title_base_mine"/>

    <RadioGroup
        android:id="@+id/rg_mygift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_receive_mygift"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="14dp"
            android:textSize="14sp"
            android:text="收到的礼物"
            android:textColor="@color/rb_purpleandblack_selector"
            />

        <RadioButton
            android:id="@+id/rb_give_mygift"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="14dp"
            android:textSize="14sp"
            android:text="送出的礼物"
            android:textColor="@color/rb_purpleandblack_selector"
            />
    </RadioGroup>

    <com.queqiaolove.widget.NoScrollViewPager
        android:id="@+id/vp_mygift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.queqiaolove.widget.NoScrollViewPager>
</LinearLayout>